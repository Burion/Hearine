<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterDetail.Views.Profile">
    <ContentPage.Content>
        <StackLayout>

            <Image Source="avatar1.png"
                   HeightRequest="200"/>
            <Label Text="{Binding Name}"
                   FontSize="30"
                   HorizontalOptions="Center"/>

            <Label Text="{Binding Mail}"
                   FontSize="20"
                   HorizontalOptions="Start"/>
            
            <Button Text="Follow"/>

            <ScrollView
                NavigationPage.HasNavigationBar="true">
                <ScrollView.Content
                HeightRequest="500">
                    <Grid x:Name="grid"

              Padding="20">
                    </Grid>
                </ScrollView.Content>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>